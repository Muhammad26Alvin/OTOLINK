<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Bagian lengkung biru atas -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/top_curve_blue" />

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="-80dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo OtoLink"
            android:scaleType="fitCenter" />

        <!-- Nama Aplikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OtoLink"
            android:textColor="@color/primaryText"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Slogan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pusatnya Ngedeal Kendaraan bermotor!"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Selamat datang -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Otolink!"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            android:layout_marginTop="32dp" />

        <!-- Tombol Telepon -->
        <Button
            android:id="@+id/btnPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login/Daftar dengan Telepon"
            android:drawableLeft="@drawable/ic_phone"
            android:backgroundTint="@color/darkBlue"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Tombol Email -->
        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login/Daftar dengan Email"
            android:drawableLeft="@drawable/ic_email"
            android:backgroundTint="@color/darkBlue"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Disclaimer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jika Anda Login, Anda Menerima\nSyarat dan Ketentuan Serta Kebijakan Privasi Otolink"
            android:textColor="@color/secondaryText"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="2dp"/>

    </LinearLayout>
</ScrollView>
