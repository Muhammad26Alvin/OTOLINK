<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Konten scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <!-- Gambar Rumah -->
                <ImageView
                    android:id="@+id/imageProperty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sampel3" />

                <!-- Tombol Back -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:layout_gravity="top|start" />
            </FrameLayout>

            <!-- Detail Properti -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Harga -->
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.350.000.000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/descText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DP 112,5JT PERBULAN"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#444444" />

                <!-- Spesifikasi -->
                <TextView
                    android:id="@+id/specText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555" />

                <!-- Lokasi & Tanggal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:src="@drawable/ic_location"
                            android:layout_marginTop="2dp">
                        </ImageView>

                        <TextView
                            android:text="JAGAKARSA, JAKARTA SELATAN"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="8dp" />

            <!-- Detail Properti (Table) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="TIPE" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="MOBIL SPORT" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="MERK DAN MODEL" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="KOENIGSEGG AGERA RS" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="TAHUN" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="2022" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="KILOMETER" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="800" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="WARNA" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="SILVER METALLIC DENGAN GARIS BIRU" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="TRANSMISI" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="AUTOMATIC 7-SPEED DUAL CLUTCH" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="SERTIFIKASI" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="BPKB DAN STNK LENGKAP" android:textColor="#000000" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="0dp" android:layout_weight="1"
                            android:text="ALAMAT LOKASI" android:textColor="#777777" />
                        <TextView android:layout_width="0dp" android:layout_weight="2"
                            android:text="JAGAKARSA, JAKARTA SELATAN" android:textColor="#000000" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <!-- Deskripsi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="1. Mesin V8 Twin-Turbo 5.0L dengan tenaga hingga 1160 HP\n2. Kecepatan maksimal lebih dari 440 km/jam\n3. Akselerasi 0-100 km/jam dalam waktu kurang dari 3 detik\n4. Desain aerodinamis dan body full carbon fiber\n5. Interior mewah dengan teknologi canggih\n6. Handling presisi tinggi untuk performa balap\n7. Produksi sangat terbatas, nilai kolektor tinggi\n8. Sistem pengereman karbon-keramik\n9. Dokumen resmi lengkap (BPKB dan STNK)"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Info Agen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_account"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmad Fikri Hanif"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Tombol Aksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Telepon"
            android:drawableLeft="@drawable/ic_call"
            android:background="#E0F2F1"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonChat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Chat"
            android:drawableLeft="@drawable/ic_chat"
            android:background="#004D40"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
