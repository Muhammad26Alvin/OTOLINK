<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgPesanan"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sampel1"
            android:contentDescription="Gambar produk" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahindra BE 6e"
                android:textSize="16sp"
                android:textColor="@color/darkBlue"
                android:letterSpacing="0.02"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="Ikon lokasi" />

                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajabasa, Bandar Lampung"
                    android:textSize="13sp"
                    android:textColor="@color/darkBlue"
                    android:letterSpacing="0.01"
                    android:fontFamily="@font/poppins_light" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 250.000.000,00"
                android:textSize="15sp"
                android:textColor="@color/darkBlue"
                android:letterSpacing="0.02"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
