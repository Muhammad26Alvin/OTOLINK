<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framecontainer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="56dp"
            android:layout_marginBottom="56dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <!-- Gambar Rumah -->
                    <ImageView
                        android:id="@+id/gambardetailmotor"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sampel3" />

                    <!-- Tombol Back -->
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_back"
                        android:padding="8dp"
                        android:layout_gravity="top|start" />
                </FrameLayout>

                <!-- Detail Properti -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Harga -->
                    <TextView
                        android:id="@+id/hargamotor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 1.350.000.000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000" />

                    <!-- Deskripsi -->
                    <TextView
                        android:id="@+id/deskripsimotor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DP 112,5JT PERBULAN"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#444444" />

                    <!-- Spesifikasi -->
                    <TextView
                        android:id="@+id/spesifikasimotor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#555555" />

                    <!-- Lokasi & Tanggal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="16sp"
                                android:layout_height="16sp"
                                android:src="@drawable/ic_location"
                                android:layout_marginTop="2dp">
                            </ImageView>

                            <TextView
                                android:id="@+id/lokasimotor"
                                android:text="JAGAKARSA, JAKARTA SELATAN"
                                android:textSize="12sp"
                                android:textColor="#777777"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Garis pemisah -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginTop="8dp" />

                <!-- Detail Properti (Table) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="TIPE"
                                android:textColor="#777777" />
                            <TextView
                                android:id="@+id/tipedetailmotor"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="MOBIL SPORT"
                                android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="MERK DAN MODEL" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/merkdetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="KOENIGSEGG AGERA RS" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="TAHUN" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/tahundetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="2022" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="KILOMETER" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/kilometerdetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="800" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="WARNA" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/warnadetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="SILVER METALLIC DENGAN GARIS BIRU" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="TRANSMISI" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/transmisidetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="AUTOMATIC 7-SPEED DUAL CLUTCH" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="SERTIFIKASI" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/sertifikasidetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="BPKB DAN STNK LENGKAP" android:textColor="#000000" />
                        </TableRow>

                        <TableRow>
                            <TextView android:layout_width="0dp" android:layout_weight="1"
                                android:text="ALAMAT LOKASI" android:textColor="#777777" />
                            <TextView
                                android:id="@+id/lokasidetailmotor"
                                android:layout_width="0dp" android:layout_weight="2"
                                android:text="JAGAKARSA, JAKARTA SELATAN" android:textColor="#000000" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_account"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/namapenjualmotor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmad Fikri Hanif"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottombardetail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <Button
                android:id="@+id/buttonCall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Telepon"
                android:drawableLeft="@drawable/ic_call"
                android:background="#E0F2F1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnChatPenjual"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Chat"
                android:drawableLeft="@drawable/ic_chat"
                android:background="#004D40"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
